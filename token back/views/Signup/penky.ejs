<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Penky</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Sign up</a></li>
                    <li class="breadcrumb-item active">Penky</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 row">
                    <label for="referral-name" class="col-md-2 col-form-label">Name</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" placeholder="Enter name" id="referral-name">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="referral-description" class="col-md-2 col-form-label">Description</label>
                    <div class="col-md-10">
                        <textarea class="form-control" placeholder="Enter description" id="referral-description"></textarea>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="referral-image" class="col-md-2 col-form-label">Image</label>
                    <div class="col-md-10">
                        <input class="form-control" type="file" id="referral-image">
                    </div>
                </div>

                <div class="row justify-content-end">
                    <button type="submit" class="col-md-2 btn btn-primary w-md">Submit</button>
                </div>

            </div>
        </div>
    </div> <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<%- contentFor('BottomJs') %>